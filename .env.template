# ==============================
# =    Database Configuration  =
# ==============================
DATABASE_URL=jdbc:postgresql://localhost:5432/user_management
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password

# ==============================
# =    Email Configuration     =
# ==============================
# Brevo SMTP Configuration (Recommended)
MAIL_USERNAME=your_brevo_email@domain.com
BREVO_SMTP_PASSWORD=your_brevo_smtp_key

# ==============================
# =    OAuth2 Configuration    =
# ==============================
# Google OAuth2 (Optional but recommended)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google
GOOGLE_AUTHORIZATION_URI=https://accounts.google.com/o/oauth2/auth?prompt=consent
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_USER_INFO_URI=https://www.googleapis.com/oauth2/v3/userinfo

# GitHub OAuth2 (Optional but recommended)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8080/login/oauth2/code/github

# ==============================
# =    Server Configuration    =
# ==============================
SERVER_PORT=8080

# ==============================
# =    Default Admin Setup     =
# ==============================
ADMIN_EMAIL=admin@localhost.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator

